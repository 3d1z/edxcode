a = float(input("1.Sayıyı girin: "))
b = float(input("2.Sayıyı girin: ")) 
secim = int(input(("Yapmak istediğiniz işlemi seçiniz.\n 1.Toplama 2. Çıkarma 3. Çarpma 4.Bölme")))

if secim ==1:
    print(a+b)
elif secim ==2:
    print(a-b)
elif secim ==3:
    print(a*b)
elif secim ==4:
    print(a/b)    
else:
    print("geçerli işlem giriniz.")
