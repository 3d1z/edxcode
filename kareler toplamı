sayi = int(input("Sayıyı giriniz: "))
toplam = 0 
carpım=1
kareler= 0

for i in range(1,sayi+1):
    if i % 2 ==1:
        toplam = toplam + i
        carpım = carpım * i
    if i % 2 ==0:
        kareler = kareler + i**2
print("Toplam: {}".format(toplam))
print("Çarpım: {}".format(carpım))
print("Kareler Toplamı: {}".format(kareler))
